<p id="notice"><%= notice %></p>

<h1>Listing Transport Captions</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transport_captions.each do |transport_caption| %>
      <tr>
        <td><%= transport_caption.caption %></td>
        <td><%= link_to 'Show', transport_caption %></td>
        <td><%= link_to 'Edit', edit_transport_caption_path(transport_caption) %></td>
        <td><%= link_to 'Destroy', transport_caption, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><a href="/transport_images/new?transport_caption_id=<%=transport_caption.id%>">Agregar imagen</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

